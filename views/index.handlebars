<div class="panel panel-default">
    <div class="panel-heading">
        <h1 class="text-center">Eat Da Burger</h1>
    </div>
    <div class="panel-body"> 
        <form class="create-form form-inline">
            <div class="form-group">
                <label for="newBurg">Burger Name:</label>
                <input type="text" id="newBurg" name="name">
            </div>
              <button class="btn btn-danger" type="submit">Add Burger</button>
        </form>
    </div>
<div class="row">
    <div class="col-md-6">
        <div id= "uneaten" class="panel panel-default">
            <div class="panel-heading">
                <h2 class="text-center">Uneaten Burgers</h2>
            </div>
            <div class="panel-body">
                <ul class="list-group">
                    {{#each uneatenBurgers}} {{#unless devoured}} {{> burgers/burger-block}} {{/unless}} {{/each}}
                </ul>
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div id="devoured" class="panel panel-default">
            <div class="panel-heading">
                <h2 class="text-center">Devoured Burgers</h2>
            </div>
            <div class="panel-body">
                <ul class="list-group">
                    {{#each uneatenBurgers}} {{#if devoured}} {{> burgers/burger-block}} {{/if}} {{/each}}
                </ul>
            </div>
        </div>
    </div>
</div>

</div>